<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <TextView
        android:id="@+id/ic09_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/ic8_edit_profile_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ic09_edit_takePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="New photo"
        app:layout_constraintStart_toStartOf="@+id/ic09_edit_profilePicDisp"
        app:layout_constraintTop_toBottomOf="@+id/ic09_edit_profilePicDisp" />

    <ImageView
        android:id="@+id/ic09_edit_profilePicDisp"
        android:layout_width="255dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/ic09_edit_profilePic"
        app:layout_constraintTop_toBottomOf="@+id/ic09_edit_newUsernameInput"
        tools:srcCompat="@drawable/select_avatar" />

    <Button
        android:id="@+id/ic09_edit_backNoSave"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Return without saving"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic09_edit_takePicture" />

    <Button
        android:id="@+id/ic09_edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ic09_edit_backNoSave" />

    <EditText
        android:id="@+id/ic09_edit_newUsernameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ic09_edit_profilePicDisp"
        app:layout_constraintTop_toBottomOf="@+id/ic09_edit_title" />

    <TextView
        android:id="@+id/ic09_edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/ic8_username"
        app:layout_constraintBottom_toBottomOf="@+id/ic09_edit_newUsernameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ic09_edit_newUsernameInput" />

    <TextView
        android:id="@+id/ic09_edit_profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Profile Picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ic09_edit_profilePicDisp" />

</androidx.constraintlayout.widget.ConstraintLayout>