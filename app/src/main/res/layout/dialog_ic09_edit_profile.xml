<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editProfileDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ic09_edit_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="@+id/ic09_edit_backNoSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ic09_edit_backNoSave"
        app:layout_constraintTop_toTopOf="@+id/ic09_edit_backNoSave" />

    <ImageView
        android:id="@+id/ic09_edit_profilePicDisp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ic09_edit_newUsernameInput"
        app:layout_constraintTop_toBottomOf="@+id/ic09_edit_newUsernameInput"
        tools:srcCompat="@drawable/select_avatar" />

    <TextView
        android:id="@+id/ic09_edit_profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Picture"
        app:layout_constraintStart_toStartOf="@+id/ic09_edit_title"
        app:layout_constraintTop_toTopOf="@+id/ic09_edit_profilePicDisp" />

    <Button
        android:id="@+id/ic09_edit_takePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="New photo"
        app:layout_constraintEnd_toEndOf="@+id/ic09_edit_profilePicDisp"
        app:layout_constraintStart_toStartOf="@+id/ic09_edit_profilePicDisp"
        app:layout_constraintTop_toBottomOf="@+id/ic09_edit_profilePicDisp" />

    <EditText
        android:id="@+id/ic09_edit_newUsernameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic09_edit_username"
        app:layout_constraintTop_toBottomOf="@+id/ic09_edit_title" />

    <TextView
        android:id="@+id/ic09_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/ic8_edit_profile_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ic09_edit_backNoSave"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic09_edit_takePicture" />

    <TextView
        android:id="@+id/ic09_edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ic8_username"
        app:layout_constraintBottom_toBottomOf="@+id/ic09_edit_newUsernameInput"
        app:layout_constraintStart_toStartOf="@+id/ic09_edit_title"
        app:layout_constraintTop_toTopOf="@+id/ic09_edit_newUsernameInput" />

</androidx.constraintlayout.widget.ConstraintLayout>